
@{
    ViewBag.Title = "Inicio";
}


<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    @using (Html.BeginForm("Atencion", "Index", FormMethod.Post, new { @id = "filtros" }))
                    {
                        <div class="row">
                            <div class="form-group col-md-3">
                                @Html.DropDownList("idSector", (IEnumerable<SelectListItem>)ViewBag.Sectores, "Todos los sectores...", new { @class = "select", id = "filtro-sector" })
                            </div>
                        </div>
                    }
                </div>
                <div>
                    <p> @Html.ActionLink("Obtener Semanal", "SemanalEstablecimiento", new { idEstablecimiento = "1" })  </p>
                </div>


            </div>
        </div>
    </div>
</div>